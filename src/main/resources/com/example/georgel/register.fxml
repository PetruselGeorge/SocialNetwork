<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="653.0" prefWidth="717.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.controller.RegisterController">
   <AnchorPane prefHeight="97.0" prefWidth="717.0" style="-fx-background-color: #15002C;">
      <Label layoutX="2.0" layoutY="18.0" prefHeight="59.0" prefWidth="202.0" text="  User Registration:"
             textFill="WHITE">
         <font>
            <Font name="Calibri Light" size="24.0"/>
         </font>
      </Label>
   </AnchorPane>
   <Label layoutX="40.0" layoutY="190.0" prefHeight="31.0" prefWidth="113.0" text="First Name:">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <Label layoutX="40.0" layoutY="270.0" text="Last Name:">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <Label layoutX="40.0" layoutY="350.0" text="Email:">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <Label layoutX="40.0" layoutY="430.0" text="Password:">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <TextField fx:id="firstnameTextField" layoutX="153.0" layoutY="193.0" prefHeight="30.0" prefWidth="180.0"
              promptText="first name"/>
   <TextField fx:id="emailTextField" layoutX="153.0" layoutY="351.0" prefHeight="30.0" prefWidth="180.0"
              promptText="email"/>
   <TextField fx:id="lastnameTextField" layoutX="153.0" layoutY="271.0" prefHeight="30.0" prefWidth="180.0"
              promptText="last name"/>
   <Button layoutX="128.0" layoutY="544.0" mnemonicParsing="false" onAction="#createAccountButtonOnAction"
           prefHeight="59.0" prefWidth="180.0" style="-fx-background-color: #15002C;" text="Create Account"
           textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font size="18.0"/>
      </font>
   </Button>
   <PasswordField fx:id="passwordPasswordField" layoutX="153.0" layoutY="429.0" prefHeight="30.0" prefWidth="180.0"
                  promptText="password"/>
   <Label fx:id="errorMessageLabel" layoutX="-1.0" layoutY="111.0" prefHeight="59.0" prefWidth="717.0"
          textFill="#ff1515">
      <font>
         <Font size="18.0"/>
      </font>
   </Label>
   <Button fx:id="cancelRegistration" layoutX="333.0" layoutY="544.0" mnemonicParsing="false"
           onAction="#cancelRegistrationButtonOnAction" prefHeight="59.0" prefWidth="180.0"
           style="-fx-background-color: #15002C;" text="Cancel" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font size="18.0"/>
      </font>
   </Button>
</AnchorPane>
